include head.pug
block body
    div#root
        include header
        button.back-button(id="back")
            p.back-font="Go to previous"
            div.back-img-container
                img(src='/icons/return.png')
        button.open-modal
            p="Git Status"
        div.git-status-modal
            div.modal-body
                h2="Git Status"
                button.close-modal
                    img(src='/icons/return.png')
                p 
                    br
                p 
                    br
                .file-section
                    h3="Untracked"
                    //- ul
                    //-     each file in untrackedList 
                    //-         li = file
                .file-section 
                    h3="Modified"
                    //- ul 
                    //-     each file in modifiedList
                    //-         li = file
                .file-section 
                    h3="Staged"
                    //- ul 
                    //-     each file in stagedList 
                    //-         li = file
                
        div#directory-container
            each file in files
                div(class=`${file.type == "directory" ? "directory-item" : "directory-item disabled"}`)
                    //img 주소 및 크기 고정
                    div.file-image-container
                        if file.type == "directory"
                            if file.initialized
                                div.git-image-container
                                    img(src='/icons/git.png')
                                img(src='/icons/folder.png')
                            else
                                img(src='/icons/folder.png')
                        else if file.type == "file"
                            img(src='/icons/documents.png')
                        else
                            img(src='/icons/prohibited.png')
                    p.directory-name=file.name

    script(src="/scripts/directory.js", defer)

